<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="all">

    <com.xia.flybanner.FlyBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="15dp"
        app:fb_autoTurningTime="3000"
        app:fb_canLoop="true"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_loop_control_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="loopControl"
            android:text="控制自动轮播"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/main_loop_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="是否自动翻页：否"
            android:textSize="16dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_set_item_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setCurrentItem"
            android:text="随机设定页面显示"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/main_current_item_position_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="当前页position：0，是否处于最后一页：false"
            android:textSize="16dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_refresh_data_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:onClick="refreshData"
        android:text="随机刷新数据"/>
</androidx.appcompat.widget.LinearLayoutCompat>